{
  "manifest_version": 2,

  "name": "wiki crawl",
  "description": "An extension for tracking what the fuck you're doing on wikipedia.",
  "version": "0.1",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "https://secure.flickr.com/",
    "webNavigation",
    "tabs"
  ]
}
